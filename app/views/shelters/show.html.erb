
<div class="container" >

  <div style="background-image: url(<%= asset_path 'beautiful-shot-chickens-grass-farm-sunny-day.jpg' %>); height: 200vh; background-size: cover;">
    <!-- Your content here -->
  <style>

  h1,h2,h4 {
    color: white;
    text-align: center;
    text-shadow: 2px 2px 0px black;
  }
  .animals {
    color: white;
    text-align: center;
    text-decoration: underline;
  }
  .title {
    color: purple;
    text-align: center;
    font-size: 100px;
  }
  .sub_title {
    color: black;
    text-align: center;
  }

  .display-1 {
    color: #228B22;
    text-align: center;
    font-weight: bold;
    text-decoration: underline;
    text-shadow: 0px 0px 12px #1C6EA4;
  }
  </style>
  <h1> <%= @shelter.name %></h1>
  <h4>Shelter's User ID: <%= @shelter.user_id %></h4>

  <% if @facade.num_of_animals <= 1 %>
    <%= render "animals", locals: { singular: true } %>
  <% else %>
    <%= render "animals", locals: { singular: false } %>
  <% end %>
    <p> <%= link_to "Create New Animal", "/shelters/#{@facade.shelter.id}/animals/new", data: { turbo: false }, class: "btn btn-success shadow-lg" %></p>
    <p> <%= link_to "Edit Shelter", "/shelters/#{@facade.shelter.id}/edit", data: { turbo: false }, class: "btn btn-success shadow-lg" %></p>
    <p> <%= button_to "Delete Shelter", "/shelters/#{@facade.shelter.id}", method: :delete, class: "btn btn-success" %></p>
    <p> <%= link_to "User Dashboard", "/users/#{@facade.shelter.user_id}", class: "btn btn-success" %></p>
  </div>
</div>


