<div class="text-center">
  <h2>Register New User</h2>

  <%= form_with url: new_user_path, method: :post, data: { turbo: false }, class: "d-inline-block" do |form| %>

    <div class="mb-2">
      <%= form.label :email, "Email: ", class: "form-label" %>
      <%= form.text_field :email, class: "form-control" %>
    </div>

    <div class="mb-2">
      <%= form.label :password, "Password: ", class: "form-label" %>
      <%= form.password_field :password, class: "form-control" %>
    </div>

    <div class="mb-2">
      <%= form.label :password_confirmation, "Password Confirmation: ", class: "form-label" %>
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>
    
    <%= form.submit "Submit", class: "btn btn-success btn-sm shadow-lg" %>
  <% end %>
  <br>
  <br>
  <p>Already Registered?</p>
  <%= link_to "Log In with Email", log_in_path, method: :get, class: "btn btn-success btn-sm shadow-lg m-1" %>
  <%= link_to "Login with Google (OAuth)", "/auth/google_oauth2", class: "btn btn-success btn-sm shadow-lg m-1" %>
  <hr>
  <%= image_tag("logo.jpeg", class: "img-fluid custom-img-max") %>
</div>
