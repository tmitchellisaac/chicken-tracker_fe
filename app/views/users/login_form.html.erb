<div class="container user-log-in-container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="roboto text-center text-white text-padding-top">User Login</h1>
      <div class="user_log_in">
        <%= render "form", user: @user,
                        path: log_in_path,
                        method: :post %>
                          <br>
        <br>
        <p class="text-white font-weight-bold">New User?</p>
        <%= button_to "Register", new_user_path, method: :get, class: "btn btn-success btn-sm shadow-lg" %><br>
        <br>
        <hr>
      </div>
    </div>
  </div>
</div>

