<%= render partial: "shared/inside_shelter" %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="roboto text-center text-white text-padding-top">New Animal</h1>
        <div class="new_animal_form">
          <%= link_to sanitize("&larr; Back to Shelter"), "/shelters/#{params[:shelter_id]}", class: "btn btn-success" %>
          <%= render "form", animal: @facade,
          path: "/shelters/#{params[:shelter_id]}/animals",
          method: :post %>
        </div>
    </div>
  </div>
</div>
