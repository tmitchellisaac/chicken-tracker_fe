<%= render partial: "/shared/navbar" %>

<style>
h1,h2,p {
  color: white;
  text-align: center;
  text-shadow: 2px 2px 0px black;
}
</style>


<h2>Animal Show Page</h2>
<hr>
<h1><%= @facade.animal.name %></h1>
<p>Animal Type: <%= @facade.animal.species %> </p>
<p>Birthday: <%= @facade.animal.birthday %></p>
<p>Color: <%= @facade.animal.color %></p>
<p>Main Food Source: <%= @facade.animal.main_prey %></p>
<p>Favorite Food: <%= @facade.animal.fav_food%></p>
<p>Diet Type: <%= @facade.animal.diet%></p>
<p>Habitat: <%= @facade.animal.habitat %></p>
<p>Skin Type: <%= @facade.animal.skin_type %></p>
<p>Top Speed: <%= @facade.animal.top_speed %></p>
<p>Avg Litter Size: <%= @facade.animal.avg_litter %></p>
<p>Avg Lifespan: <%= @facade.animal.lifespan %></p>
<p>Weight: <%= @facade.animal.weight %></p>
<p>Lifestyle: <%= @facade.animal.lifestyle %></p>

<div class="d-flex justify-content-center">
  <%= link_to "Edit this animal", "/shelters/#{@facade.shelter_id}/animals/#{@facade.id}/edit", method: :get, class: "btn btn-success m-2"  %>
 
  <%= button_to "Delete this Animal", "/shelters/#{@facade.shelter_id}/animals/#{@facade.id}", method: :delete, class: "btn btn-success m-2"  %>

  <%= link_to "Back to Shelter Page", "/shelters/#{@facade.shelter_id}", class: "btn btn-success m-2" %>
</div>