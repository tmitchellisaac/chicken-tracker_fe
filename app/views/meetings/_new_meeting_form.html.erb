<%= simple_form_for :meeting, url: path, method: method, html: { class: "meeting"} do |f| %>
  <%= f.input :name, :label_html => { :class => 'text-white quicksand weight-bold text-padding-top' } %>
  <%= f.input :notes, :label_html => { :class => 'text-white quicksand weight-bold text-padding-top' } %>
  <%= f.input :location, :label_html => { :class => 'text-white quicksand weight-bold text-padding-top' } %>
  <%= f.input :date, :label_html => { :class => 'text-white quicksand weight-bold text-padding-top' } %>
  <%= f.input :time, :label_html => { :class => 'text-white quicksand weight-bold text-padding-top' } %>
    <%= f.submit class: "btn btn-success" %>
<% end %>
