<div style="text-align: center;">
  <h2>Welcome!</h2>

  <% if current_user %>
    <%= link_to "User Dashboard", "/users/#{current_user.id}", method: :get, class: "btn btn-success" %>
    <br>
    <%= link_to "Log Out", log_out_path, method: :get, class: "btn btn-success" %>
  <% else %>
    <%= button_to "Log In", log_in_path, method: :get, class: "btn btn-success"  %> <br>
    <%= button_to "Register", new_user_path, method: :get, class: "btn btn-success" %>
  <% end %>
  <br> 
  <br> 
  <%= image_tag("logo.jpeg", style: "width: 400px; height: auto;") %>
</div>

<hr>

