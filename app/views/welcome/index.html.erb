<style>

h1,h2 {
  color: white;
  text-align: center;
  text-shadow: 2px 2px 0px black;
}
</style>

<div class="container text-center mt-3">
  <h2>Welcome!</h2>

  <div class="row justify-content-center">

    <% if current_user %>
      <div class="col-12 col-md-auto mb-2">
        <%= link_to "User Dashboard", user_path(current_user), class: "btn btn-success btn-sm shadow-lg m-1" %>
      </div>
    <% else %>

      <div class="col-12 col-md-auto mb-2">
        <%= button_to "Register", new_user_path, method: :get,  class: "btn btn-success btn-sm shadow-lg m-1" %>
      </div>
      <div class="col-12 col-md-auto mb-2">
        <%= button_to "Log In with Email", log_in_path, method: :get, class: "btn btn-success btn-sm shadow-lg m-1" %>
      </div>
      <div class="col-12 col-md-auto">
        <%= link_to "Login with Google (OAuth)", "/auth/google_oauth2", class: "btn btn-success btn-sm shadow-lg m-1" %>
      </div>
    <% end %>
  </div>

  <hr>
  <%= image_tag("logo.jpeg", class: "img-fluid custom-img-max") %>
</div>
